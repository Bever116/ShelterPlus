# Copy this file to `.env` (or service-specific env files) and fill in the values.
# Values prefixed with `replace-` should be generated or provided for your environment.

# --- API & Prisma ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shelterplus
SESSION_SECRET=replace-with-session-secret
PORT=3333
API_ALLOWED_ORIGINS=http://localhost:3000
API_ENABLE_HTTPS=false
API_HTTPS_CERT_PATH=apps/api/certs/cert.pem
API_HTTPS_KEY_PATH=apps/api/certs/key.pem
API_PUBLIC_ORIGIN=http://localhost:3000
WEB_APP_ORIGIN=http://localhost:3000
DISCORD_BOT_TOKEN=replace-with-discord-bot-token
# Leave OFFICIAL_CONFIG_JSON empty to fall back to the bundled Shelter+ dataset.
OFFICIAL_CONFIG_JSON=

# --- Web / NextAuth ---
NEXTAUTH_SECRET=replace-with-nextauth-secret
DISCORD_CLIENT_ID=replace-with-discord-client-id
DISCORD_CLIENT_SECRET=replace-with-discord-client-secret
NEXT_PUBLIC_API_URL=http://localhost:3333
NEXT_PUBLIC_WEB_URL=http://localhost:3000
