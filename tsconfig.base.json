{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shelterplus/shared": [
        "packages/shared/dist/index",
        "packages/shared/src/index"
      ],
      "@shelterplus/shared/*": ["packages/shared/src/*"],
      "@prisma/client": ["apps/api/node_modules/.prisma/client/index.d.ts"],
      "@prisma/client/*": ["apps/api/node_modules/.prisma/client/*"]
    }
  },
  "include": ["packages", "apps"],
  "exclude": ["node_modules", "dist", "build"]
}
